@model Games_Forum.Data.Models.Post

<title>Edit @Model.Title post</title>

<div>
    <form method="post" asp-controller="Post" asp-action="EditPost">
        <input type="hidden" value="@Model.Id" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title">Post Title</label>
            <input asp-for="Title" class="form-control" placeholder="Choose forum title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control" rows="10"></textarea>
        </div>
        <button type="submit" id="newFormBtn" class="btn btn-submitPost">Edit Post</button>
    </form>
</div>