@model Games_Forum.Models.Post.PostEditModel
<title>Edit @Model.Title post</title>

<div>
    <form method="post" asp-controller="Post" asp-action="EditPost">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title">Post Title</label>
            <input asp-for="Title" class="form-control" placeholder="Choose post title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content">Content...</label>
            <input asp-for="Content" class="form-control" placeholder="Post content" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" id="newFormBtn" class="btn btn-submitPost">Edit Post</button>
    </form>
</div>