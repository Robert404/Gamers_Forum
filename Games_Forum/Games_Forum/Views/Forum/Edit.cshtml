@model Games_Forum.Models.Forum.ForumListingModel

<title>Edit @Model.Name forum</title>

<div>
    <form method="post" asp-controller="Forum" asp-action="EditForum">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="Name">Form Title</label>
            <input asp-for="Name" class="form-control" placeholder="Choose forum title" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description...</label>
            <input asp-for="Description" class="form-control" placeholder="Forum description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div id="upload">
            <label>Upload Forum Image</label>
            <br />
            <label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Paste Image Url Here" />
            </label>
        </div>
        <button type="submit" id="newFormBtn" class="btn btn-submitPost">Edit Forum</button>
    </form>
</div>