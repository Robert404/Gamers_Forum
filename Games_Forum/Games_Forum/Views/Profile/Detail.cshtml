@model Games_Forum.Models.Profile.ProfileModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<Games_Forum.Data.Models.ApplicationUser> UserManager

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            User Profile
        </div>
    </div>
    <div class="row userProfile">
        <div class="col-md-4">
            <div id="userProfileImage" style="background-image: url(@Model.ProfileImageUrl)"></div>
            @if (User.Identity.Name == Model.UserName) 
            {
                 <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="Upload">
                     <div id="upload">
                         <label class="btn btn-file btn-outline-secondary">
                             Browse <input type="file" name="file" style="display:none" />
                         </label>
                     </div>
                     <button type="submit" id="btn-profile" class="btn btn-outline-secondary">Submit</button>
                 </form>
            }
        </div>
    </div>
    <div class="col-md-8">
        <span id="userName">@Model.UserName</span>
        @if (Model.IsAdmin) 
        {
            <span class="isAdmin">Admin</span>
        }
        <span id="userRating">Current Rating @Model.UserRating</span>
        <span id="userEmailLabel">Email: @Model.Email</span>
        <span id="userCreatedLabel">Member Since: @Model.MemberSince</span>
    </div>
</div>