@model Games_Forum.Models.Reply.ReplyEditModel

    <div>
        <form method="post" asp-controller="Reply" asp-action="EditReply">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReplyContent">Edit Reply</label>
                <input asp-for="ReplyContent" class="form-control" placeholder="Choose forum title" />
                <span asp-validation-for="ReplyContent" class="text-danger"></span>
            </div>
            <button type="submit" id="newFormBtn" class="btn btn-submitPost">Edit Reply</button>
        </form>
    </div>